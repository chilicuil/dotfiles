[color]
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
	meta = 11
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan

;Highlight whitespace in diffs

[color]
	ui = true
[color "diff"]
	whitespace = red reverse
	commit = yellow bold
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[user]
    name  = Javier LÃ³pez
    email = m@javier.io

[github]
    user = javier-lopez

[alias]
    d       = diff
    cm      = commit
    cmv     = commit -v
    s       = show
    st      = status
    br      = branch
    co      = checkout
    unstage = reset HEAD --
    last    = log -1 HEAD
    praise  = blame
    discart = checkout --
    glog    = log --all --pretty = 'format:%d %Cgreen%h%Creset %an - %s' --graph

[core]
    editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX

[merge]
    tool = vimdiff

[branch "master"]
    remote = origin
    merge  = refs/heads/master

    ;http://tinyurl.com/yeevhcr
    ;This tells Git 2 things:

   ;1. When you're on the master branch, the default remote is origin.

   ;2. When using git pull on the master branch, with no remote and
      ;branch specified, use the default remote (origin) and merge in
      ;the changes from the master branch.
[push]
	default = matching
[credential]
	helper = cache --timeout=3600
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
